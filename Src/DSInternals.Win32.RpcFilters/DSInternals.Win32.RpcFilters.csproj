<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>net48;net8.0-windows</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyTitle>DSInternals RPC Filter Manager Assembly</AssemblyTitle>
    <Authors>Michael Grafnetter</Authors>
    <Version>1.1</Version>
    <AssemblyVersion>1.1</AssemblyVersion>
    <ProductVersion>1.1</ProductVersion>
    <FileVersion>1.1</FileVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/MichaelGrafnetter/RpcFilterManager</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MichaelGrafnetter/RpcFilterManager.git</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageIcon>icon.png</PackageIcon>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageTags>RPC;Filter;WFP;Firewall;Windows;Interop</PackageTags>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <NeutralLanguage>en-US</NeutralLanguage>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <EnablePackageValidation>true</EnablePackageValidation>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Library for managing Windows RPC Filters.</Description>
    <PackageReleaseNotes>
- Added support for authentication level and security descriptor match operators.
    </PackageReleaseNotes>
    <IsPackable>true</IsPackable>
    <AnalysisMode>Recommended</AnalysisMode>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true' AND '$(Configuration)' == 'Release'">
    <!-- Enable Source Link on CI builds -->
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <!-- DLLs need to be digitally signed first before a NuGet package is created. -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.205">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Memory" Version="4.6.3" Condition="'$(TargetFramework)' == 'net48'" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="all" Condition="'$(GITHUB_ACTIONS)' == 'true' AND '$(Configuration)' == 'Release'" />
  </ItemGroup>

  <ItemGroup>
    <!-- Additional files to include in the NuGet package -->
    <None Include="$(MSBuildThisFileDirectory)../Icons/package_black.png" Pack="true" PackagePath="/icon.png" Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)PACKAGE.md" Pack="true" PackagePath="/README.md" Visible="true" />
  </ItemGroup>

  <!-- Group source code files in Visual Studio -->
  <ItemGroup>
    <Compile Update="WellKnownProtocolTranslator.OpNums.cs">
      <DependentUpon>WellKnownProtocolTranslator.cs</DependentUpon>
    </Compile>
    <Compile Update="WellKnownProtocolTranslator.Protocols.cs">
      <DependentUpon>WellKnownProtocolTranslator.cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
